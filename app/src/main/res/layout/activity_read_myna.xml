<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadDriveActivity">

    <EditText
        android:id="@+id/editTextPIN1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="暗証番号１"
        android:inputType="numberPassword"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/errorPIN1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextPIN1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonReadMyna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="カード読み取り"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/errorPIN1"/>

    <TextView
        android:id="@+id/scanMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="読み取り不可"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonReadMyna"/>



</androidx.constraintlayout.widget.ConstraintLayout>